using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter a sentence: ");
        string sentence = Console.ReadLine().ToLower();

        int count = 0;

        for (int i = 0; i < sentence.Length; i++)
        {
            char c = sentence[i];
            if (c == 'a' || c == 'e' || c == 'i' || c == 'o' || c == 'u')
                count++;
        }

        Console.WriteLine($"Number of vowels: {count}");
    }
}
