using System;

class Program
{
    static void Main()
    {
        Console.Write("Enter a word: ");
        string word = Console.ReadLine();

        string reverse = "";

        for (int i = word.Length - 1; i >= 0; i--)
        {
            reverse += word[i];
        }

        Console.WriteLine($"Reversed word: {reverse}");
    }
}
